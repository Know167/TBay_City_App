<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".CityServices">
    <!--<GridView-->
    <!--    android:id="@+id/serviceGrid"-->
    <!--    android:layout_width="match_parent"-->
    <!--    android:layout_height="match_parent"-->
    <!--    android:numColumns="2"-->
    <!--    android:horizontalSpacing="6dp"-->
    <!--    android:verticalSpacing="6dp"/>-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/textLayout"
        android:layout_marginTop="100dp"
        android:orientation="vertical">
    <TextView
        android:id="@+id/serviceText"
        android:text="City Services"
        android:fontFamily="@font/poppinsbold"
        android:textSize="30dp"

        android:layout_gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    </LinearLayout>
<GridLayout
    android:layout_below="@+id/textLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="20dp"
    android:background="@color/white"
    android:rowCount="2"
    android:columnCount="2">
    <androidx.cardview.widget.CardView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_columnWeight="1"
        app:cardCornerRadius="20dp"
        android:layout_rowWeight="1"
        android:layout_row="0"
        android:layout_column="0"
        android:layout_margin="12dp"
        app:cardElevation="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/roundcorner">
            <ImageView
                android:layout_width="160dp"
                android:layout_height="110dp"
                android:layout_gravity="center_horizontal"
                android:contentDescription="TODO"
                android:src="@drawable/trashicon"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trash Management"
                android:fontFamily="@font/poppinsbold"
                android:textColor="@color/black"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_columnWeight="1"
        app:cardCornerRadius="20dp"
        android:layout_rowWeight="1"
        android:layout_row="0"
        android:layout_column="1"
        app:cardElevation="12dp"
        android:layout_margin="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/roundcorner2"
            >
            <ImageView
                android:layout_width="160dp"
                android:layout_height="110dp"
                android:layout_gravity="center_horizontal"
                android:contentDescription="TODO"
                android:src="@drawable/constructionicon"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Road Services"
                android:fontFamily="@font/poppinsbold"
                android:textColor="@color/black"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_columnWeight="1"
        app:cardCornerRadius="20dp"
        android:layout_rowWeight="1"
        android:layout_row="1"
        android:layout_column="0"
        app:cardElevation="12dp"
        android:layout_margin="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:layout_width="160dp"
                android:layout_height="110dp"
                android:layout_gravity="center_horizontal"
                android:contentDescription="TODO"
                android:src="@drawable/trashicon"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trash Management"
                android:fontFamily="@font/poppinsbold"
                android:textColor="@color/black"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_columnWeight="1"
        app:cardCornerRadius="20dp"
        android:layout_rowWeight="1"
        android:layout_row="1"
        android:layout_column="1"

        app:cardElevation="12dp"
        android:layout_margin="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:layout_width="160dp"
                android:layout_height="110dp"
                android:layout_gravity="center_horizontal"
                android:contentDescription="TODO"
                android:src="@drawable/trashicon"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trash Management"
                android:textColor="@color/black"
                android:fontFamily="@font/poppinsbold"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</GridLayout>
</RelativeLayout>