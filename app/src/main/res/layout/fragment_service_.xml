<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/service_layout"
    android:background="@color/white"
    tools:context=".Service_Fragment">

    <LinearLayout
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

<!--                <LinearLayout-->
<!--                    android:layout_marginTop="50dp"-->
<!--                    android:layout_width="match_parent"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:orientation="horizontal">-->

<!--                    <TextView-->
<!--                        android:layout_width="0dp"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:layout_gravity="center"-->
<!--                        android:textSize="25sp"-->
<!--                        android:layout_weight="1"-->
<!--                        android:gravity="start"-->
<!--                        android:fontFamily="@font/poppinsbold"-->
<!--                        android:text="@string/thunder_bay"/>-->

<!--                    <ImageButton-->
<!--                        android:layout_width="60dp"-->
<!--                        android:layout_height="60dp"-->
<!--                        android:id="@+id/profileIcon"-->
<!--                        android:contentDescription="@string/profileimage"-->
<!--                        android:src="@drawable/usericon"/>-->
<!--                </LinearLayout>-->

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Welcome,"
                        android:gravity="center"
                        android:textSize="30sp"
                        android:fontFamily="@font/poppinsbold"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Hello Saurav"
                        android:textSize="20sp"
                        android:fontFamily="sans-serif-black"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:paddingStart="20dp"
                        android:paddingTop="10dp"
                        android:hint="Search"
                        android:drawableStart="@drawable/searchicon"
                        android:background="@drawable/searchbarbackground"/>
                </LinearLayout>

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:rowCount="2"
                    android:columnCount="2"
                    android:layout_marginTop="10dp">

                    <androidx.cardview.widget.CardView
                        android:id="@+id/trash_icon"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        app:cardCornerRadius="20dp"
                        android:layout_margin="12dp">

                        <LinearLayout

                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:background="@drawable/roundcorner">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:layout_gravity="center_horizontal"
                                android:contentDescription="TODO"
                                android:src="@drawable/trashicon"/>

                            <TextView
                                android:id="@+id/trash_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Trash Management"
                                android:fontFamily="@font/poppinsbold"
                                android:layout_gravity="center_horizontal"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/road_icon"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        app:cardCornerRadius="20dp"
                        android:layout_margin="12dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:background="@drawable/roundcorner2">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:layout_gravity="center_horizontal"
                                android:contentDescription="TODO"
                                android:src="@drawable/constructionicon"/>

                            <TextView
                                android:id="@+id/road_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Road Services"
                                android:fontFamily="@font/poppinsbold"
                                android:layout_gravity="center_horizontal"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/electricity_icon"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        app:cardCornerRadius="20dp"
                        android:layout_margin="12dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:background="@drawable/roundcorner">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:layout_gravity="center_horizontal"
                                android:contentDescription="TODO"
                                android:src="@mipmap/electricity"/>

                            <TextView
                                android:id="@+id/electricity_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Electricity"
                                android:fontFamily="@font/poppinsbold"
                                android:layout_gravity="center_horizontal"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:id="@+id/hydro_icon"
                        android:layout_width="150dp"
                        android:layout_height="150dp"
                        app:cardCornerRadius="20dp"
                        android:layout_margin="12dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:layout_gravity="center_horizontal"
                                android:contentDescription="TODO"
                                android:src="@drawable/water"/>

                            <TextView
                                android:id="@+id/hydro_text"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Hydro"
                                android:fontFamily="@font/poppinsbold"
                                android:layout_gravity="center_horizontal"/>
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                </GridLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</FrameLayout>
